<?xml version="1.0" encoding="UTF-8"?>

<project name="MyWebApp" default="full-suite" basedir="..">

    <!-- GLOBAL VARIABLES -->
    <property name="source" value="Users" />
    <!-- END -->

    <!-- AVAILABLE COMMANDS -->
    <target name="full-suite" depends="list, date" />
    <!-- END -->

    <!-- DATE -->
    <target name="date">
        <echo message="Printing system date ..."/>
        <exec executable="date" />
    </target>
    <!-- END -->

    <!-- LIST -->
    <target name="list">
        <echo message="Listing source folder ..."/>
        <exec executable="Dir">
            <!-- <arg line=" C:\ ${source}" /> -->
        </exec>
    </target>
    <!-- END -->

</project>